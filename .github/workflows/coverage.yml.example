name: Coverage

on:
  push:
    branches:
      - main
      - master
  pull_request:
    branches:
      - main
      - master

jobs:
  coverage:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0 # Required for Codecov to calculate base coverage

      - name: Setup Bun
        uses: oven-sh/setup-bun@v1
        with:
          bun-version: latest

      - name: Install dependencies
        run: bun install

      - name: Run tests with coverage
        run: bun run test:coverage:fsd

      - name: Upload coverage to Codecov
        uses: codecov/codecov-action@v4
        with:
          token: ${{ secrets.CODECOV_TOKEN }} # Optional, only needed for private repos
          files:
            - packages/eslint-plugin-fsd/coverage/lcov.info
          flags: eslint-plugin-fsd
          name: eslint-plugin-fsd-coverage
          fail_ci_if_error: false # Set to true if you want CI to fail on coverage upload errors

