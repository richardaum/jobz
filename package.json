{
  "name": "jobz-monorepo",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "// Development": "-------------------------",
    "dev": "bun run --filter '*' dev",
    "dev:chrome": "bun run --filter @jobz/chrome-extension dev",
    "dev:web": "bun run --filter @jobz/web dev",
    "dev:web:ngrok": "bun run --filter @jobz/web dev:ngrok",
    "// Build": "-------------------------",
    "build": "bun run --filter '*' build",
    "build:chrome": "bun run --filter @jobz/chrome-extension build",
    "build:web": "bun run --filter @jobz/web build",
    "// Start": "-------------------------",
    "start:web": "bun run --filter @jobz/web start",
    "preview:chrome": "bun run --filter @jobz/chrome-extension preview",
    "// Clean": "-------------------------",
    "clean": "rm -rf packages/*/dist packages/*/node_modules",
    "clean:all": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "// Lint": "-------------------------",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:chrome": "eslint packages/chrome-extension",
    "lint:web": "bun run --filter @jobz/web lint",
    "// Format": "-------------------------",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,html,css,scss}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,html,css,scss}\"",
    "// Type Check": "-------------------------",
    "type-check": "for dir in packages/*/; do if [ -f \"$dir/tsconfig.json\" ]; then tsc --noEmit --project \"$dir/tsconfig.json\" || exit 1; fi; done",
    "type-check:chrome": "tsc --noEmit --project packages/chrome-extension/tsconfig.json",
    "type-check:web": "tsc --noEmit --project packages/web/tsconfig.json",
    "// Check": "-------------------------",
    "check": "bun run format:check && bun run lint && bun run type-check",
    "check:fix": "bun run format && bun run lint:fix",
    "// Test": "-------------------------",
    "test": "bun run test:coverage:all",
    "test:coverage:all": "bun run test:coverage:fsd",
    "test:coverage:fsd": "bun run --filter 'eslint-plugin-fsd' test:coverage",
    "test:fsd": "bun run --filter 'eslint-plugin-fsd' test:run",
    "test:fsd:ui": "bun run --filter 'eslint-plugin-fsd' test:ui",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,html,css,scss}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@ngrok/ngrok": "^1.6.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "9",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "8"
  }
}
