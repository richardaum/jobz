{
  "name": "jobz-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:chrome": "cd packages/chrome-extension && bun run dev",
    "dev:chrome:filter": "bun run --filter @jobz/chrome-extension dev",
    "build": "bun run --filter '*' build",
    "build:chrome": "cd packages/chrome-extension && bun run build",
    "build:chrome:filter": "bun run --filter @jobz/chrome-extension build",
    "clean": "rm -rf packages/*/dist packages/*/node_modules",
    "clean:all": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,html,css,scss}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,html,css,scss}\"",
    "type-check": "tsc --noEmit --project packages/*/tsconfig.json",
    "check": "bun run format:check && bun run lint && bun run type-check",
    "check:fix": "bun run format && bun run lint:fix",
    "test": "echo \"No tests specified\" && exit 0",
    "prepare": "bun run check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
